{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    // https://github.com/edgarrmondragon/.github/blob/main/renovate/uv.json5
    "edgarrmondragon/.github//renovate/base.json5",
  ],

  // https://docs.renovatebot.com/modules/manager/pip-compile/#non-configured-managerfilepatterns
  "pip-compile": {
    "managerFilePatterns": [
      "(^|/)plugins/.+/requirements\\..+\\.in$",
    ],
    "lockFileMaintenance": {
      "enabled": true,
      "branchTopic": "pip-compile-refresh",
      "commitMessageAction": "Refresh pip-compile outputs",
      "schedule": ["before 3am on Monday"],
    },
  },
}
